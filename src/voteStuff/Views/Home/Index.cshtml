@{
    ViewBag.Title = "Terminal Down";
}

<div class="container">
    <div class="row">
        <div class="col center-align l12 m12 s12">
            <div class="bottomCard center-align z-depth-5">
                <div class="interCard center-align">
                    <div class="contentCard center-align">
                        <div class="homeCategoriesCardContainer">
                            <h4>All the Duos</h4>
                            <a href="~/Home/Duos/?previousDuoId=0&category=-1" class="chip">Duos</a>
                            <div class="chipsContainer">
                                @{
                                    int i = 0;
                                    foreach (var category in Enum.GetValues(typeof(DuoCategoriesEnum)))
                                    {
                                        <a href="~/Home/Duos/?previousDuoId=0&category=@i" class="chip">@Enum.GetName(typeof(DuoCategoriesEnum), category)</a>
                                        i++;
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
