@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col center-align l12 m12 s12">
            <div class="bottomCard center-align z-depth-5">
                <div class="interCard center-align">
                    <div class="contentCard center-align">
                        <div class="contactContainer">
                            <h4>Register</h4>
                            <form asp-controller="Account" asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                <div class="input-field">
                                    <label asp-for="UserName"></label>
                                    <input asp-for="UserName"/>
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                
                                <div class="input-field">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" />
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div class="input-field">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                
                                <div class="input-field">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <div>
                                    <button  class="btn siteColor waves-effect waves-light" type="submit">Register</button>
                                </div>

                            </form>
                            <br />
                            <div id="hr-mid-line">
                                <span>already a member?</span>
                            </div>
                            <br />
                            <div>
                                <a class="btn siteColor waves-effect waves-light" asp-action="Login" asp-controller="Account">Login</a>
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>